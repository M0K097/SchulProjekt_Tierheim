<Window x:Class="Tierhandlung_WPF_Anwendung_mit_Entity_Framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tierhandlung_WPF_Anwendung_mit_Entity_Framework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel x:Name="login_field" Grid.Row="0" Orientation="Horizontal">
            <Label FontSize="16" FontFamily="Book Antiqua" >Benutzer:</Label>
            <TextBox x:Name="login_user_name" Width="100"></TextBox>
            <Label FontSize="16" FontFamily="Book Antiqua">Passwort:</Label>
            <TextBox x:Name="login_user_password" Width="100"></TextBox>
            <Button x:Name="anmelden" Width="Auto" Click="anmelden_Click">Anmelden</Button>
            <Button x:Name="acc_erstellen" Width="Auto" Click="acc_erstellen_Click">Account erstellen</Button>
        </StackPanel>


        <StackPanel Grid.Row="1">
            <TextBlock FontSize="16" FontFamily="Book Antiqua" x:Name="user_name_show"></TextBlock>
            <Button x:Name="abmelden" FontSize="16" HorizontalAlignment="Left" FontFamily="Book Antiqua" Visibility="Hidden" Width="60" Click="abmelden_Click">Abmelden</Button>
            <Label FontFamily="Book Antiqua" FontSize="16">Filter:</Label>
            <TextBox x:Name="filter_query_name" BorderThickness="5" FontSize="18" KeyUp="filter_for_query" Width="Auto" Height="40"/>
            <DataGrid x:Name="tier_liste" BorderThickness="5" FontFamily="Book Antiqua" FontSize="18"  ItemsSource="{Binding gefilterte_tiere}" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="tier_liste_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Art" Width="Auto" Binding="{Binding Tierart}" />
                    <DataGridTextColumn Header="Name" Width="*"  Binding="{Binding Tiername}" />
                    <DataGridTextColumn Header="Nummer" Width="Auto"  Binding="{Binding TierId}" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock FontSize="16" FontFamily="Book Antiqua" Margin="10" x:Name="selected">
           <Run>Name:</Run>
           <Run Text="{Binding Tiername}"></Run>
           <LineBreak></LineBreak>
           <Run>Spezies:</Run>
           <Run Text="{Binding Tierart}"></Run>
           <LineBreak></LineBreak>
           <Run>Nummer:</Run>
           <Run Text="{Binding TierId}"></Run>
           <LineBreak></LineBreak>
           <Run>Gebohren:</Run>
           <Run Text="{Binding Geburtsdatum}"></Run>
           <LineBreak></LineBreak>
           <Run>Beschreibung:</Run>
           <Run Text="{Binding Beschreibung}"></Run>
            </TextBlock>
            <Button HorizontalAlignment="Left" Width="200" Click="Button_Click">Anfragen</Button>
            <TextBlock x:Name="anfrage_info"></TextBlock>
            <Label>Deine Anfragen</Label>
            <ListView ItemsSource="{Binding deine_anfragen}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding AnfrageId}"></Run>
                            <Run Text="{Binding Tier.Tiername}"></Run>
                            <Run Text="{Binding Tier.Tierart}"></Run>
                        </TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackPanel>

        <DataGrid x:Name="liste_anfragen" Grid.Column="2" ItemsSource="{Binding alle_anfragen}" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="tier_liste_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Width="Auto" Header="Anfrage ID"  Binding="{Binding AnfrageId}" />
                <DataGridTextColumn Width="Auto" Header="Name des Tieres" Binding="{Binding Tier.Tiername}" />
                <DataGridTextColumn Width="Auto" Header="Name des Benutzers"  Binding="{Binding Nutzer.Benutzername}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
